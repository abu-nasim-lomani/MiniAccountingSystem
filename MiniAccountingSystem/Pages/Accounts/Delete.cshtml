@page "{id:int}"
@model QtecAccountsWeb.Pages.Accounts.DeleteModel
@{
    ViewData["Title"] = "Delete Account";
}

<h1>@ViewData["Title"]</h1>

<h3 class="text-danger">Are you sure you want to delete this?</h3>
<div>
    <h4>Chart of Account</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Account Name
        </dt>
        <dd class="col-sm-10">
            @Model.Account.AccountName
        </dd>
    </dl>

    <form method="post">
        @* We need the hidden field here too, so the OnPostAsync method knows which ID to delete *@
        <input type="hidden" asp-for="Account.AccountId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>