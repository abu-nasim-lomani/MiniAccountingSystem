@page "{userId}"
@model MiniAccountingSystem.Pages.Admin.ManageRolesModel
@{
    ViewData["Title"] = "Manage Roles";
}

<h1>@ViewData["Title"]</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div class="card">
                <div class="card-header">
                    Assign Roles for User: <strong>@Model.UserEmail</strong>
                </div>
                <div class="card-body">
                    @* We will loop through all available roles in the system *@
                    @foreach (var role in Model.AllRoles)
                    {
                        <div class="form-check m-1">
                            @* This is the checkbox for each role.
                                The name "SelectedRoles" matches the [BindProperty] in our C# code.
                            *@
                            <input type="checkbox" name="SelectedRoles" value="@role.Name" class="form-check-input"
                                   @(Model.SelectedRoles.Contains(role.Name) ? "checked" : "") />
                            <label class="form-check-label">
                                @role.Name
                            </label>
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <input type="submit" value="Save Roles" class="btn btn-primary" />
                    <a asp-page="./Users" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>