@page
@model MiniAccountingSystem.Pages.Admin.UsersModel
@{
    ViewData["Title"] = "User Management";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>User Email</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @* This loop will display each user from the Model.UserList *@
        @foreach (var user in Model.UserList)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.Roles</td>
                <td>
                    @* We will create this Manage Roles page later *@
                    <a class="btn btn-primary btn-sm" asp-page="ManageRoles" asp-route-userId="@user.UserId">Manage Roles</a>
                </td>
            </tr>
        }
    </tbody>
</table>